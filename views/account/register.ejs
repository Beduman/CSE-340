<% if (errors) { %>
  <ul class="notice">
 <% errors.array().forEach(error => { %>
   <li><%= error.msg %></li>
<%  }) %>
 </ul>
<% } %>

<form action="/account/register" method="post">
    <!-- login form fields here -->
    <%- messages() %>
    <input type="text" name="account_firstname" id="accountFirstname" placeholder="First Name" required value="<%= locals.account_firstname %>">
    <input type="text" name="account_lastname" id="accountLastname" placeholder="Last Name" required value="<%= locals.account_lastname %>">
    <input type="text" name="account_email" placeholder="Email" required value="<%= locals.account_email %>">
    <label for="accountPassword">Password:</label> 
    <span>Passwords must be at least 12 characters and contain at least 1 number, 1 capital letter and 1 special character</span> 
    <input type="password" name="account_password" id="accountPassword" required pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$">
    <button type="submit">Register</button>
</form>