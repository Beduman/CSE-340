<% if (errors) { %>
  <ul class="notice">
 <% errors.array().forEach(error => { %>
   <li><%= error.msg %></li>
<%  }) %>
 </ul>
<% } %>

<form action="/inv/add-inventory" method="post">
    <%- messages() %>
    <label for="classification_id">Classification:</label>
    <select name="classification_id" id="classification_id" required>
        <option value="">Select a Classification</option>
        <!-- Add options dynamically from database -->
    </select>
    
    <input type="text" name="inv_make" id="invMake" placeholder="Make" required value="<%= locals.inv_make %>">
    <input type="text" name="inv_model" id="invModel" placeholder="Model" required value="<%= locals.inv_model %>">
    <input type="number" name="inv_year" id="invYear" placeholder="Year" required value="<%= locals.inv_year %>">
    <input type="text" name="inv_description" id="invDescription" placeholder="Description" required value="<%= locals.inv_description %>">
    <input type="text" name="inv_image" id="invImage" placeholder="Image Path (e.g., /images/vehicles/car.jpg)" required value="<%= locals.inv_image %>">
    <input type="text" name="inv_thumbnail" id="invThumbnail" placeholder="Thumbnail Path (e.g., /images/vehicles/car-tn.jpg)" required value="<%= locals.inv_thumbnail %>">
    <input type="number" name="inv_price" id="invPrice" placeholder="Price" required value="<%= locals.inv_price %>">
    <input type="number" name="inv_miles" id="invMiles" placeholder="Miles" required value="<%= locals.inv_miles %>">
    <input type="text" name="inv_color" id="invColor" placeholder="Color" required value="<%= locals.inv_color %>">
    <button type="submit">Add Vehicle</button>
</form>